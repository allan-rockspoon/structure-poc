<resources xmlns:tools="http://schemas.android.com/tools">
	<!-- Base application theme. -->
	<style name="Theme.PoC" parent="Theme.MaterialComponents.DayNight.NoActionBar">
		<!-- Primary brand color. -->
		<item name="colorPrimary">@color/purple_500</item>
		<item name="colorPrimaryVariant">@color/purple_700</item>
		<item name="colorOnPrimary">@color/white</item>
		<!-- Secondary brand color. -->
		<item name="colorSecondary">@color/teal_200</item>
		<item name="colorSecondaryVariant">@color/teal_700</item>
		<item name="colorOnSecondary">@color/black</item>
		<!-- Status bar color. -->
		<item name="android:statusBarColor">@android:color/transparent</item>
		<!-- Customize your theme here. -->

		<item name="android:windowSplashScreenBackground" tools:targetApi="s">?attr/backgroundColor</item>
		<item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@drawable/launcher_avd</item>
		<item name="android:windowSplashScreenAnimationDuration" tools:targetApi="s">1000</item>
	</style>
</resources>